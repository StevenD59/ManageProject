{% extends 'admin/index.html.twig' %}


    {% block body %}
        <div class="col-12 col-md-10 text-center">
            <h1 class="my-3">Liste des  t√¢ches</h1>

            {% if is_granted('ROLE_ADMIN') %}
			<div class="text-right">
				<a href="{{ path('tache_new', {'id' : projectId } ) }}">
					<button type="submit" class="btn btn-light my-3">Ajouter une tache</button>
				</a>
			</div>
		{% endif %}


            <table class="table">
                <thead>
                <tr>
                    <th class="col-6">Tache</th>
                    <th class="col-6">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for task in taches %}
                    <tr>
                        <th scope="row">{{ task.nom }}</th>
                        <td class="pt-3 d-md-none ">
                            <div class="d-flex justify-content-around">
                                <i class="fas fa-search fa-lg"></i>
                                <i class="fas fa-edit fa-lg"></i>
                                <i class="fas fa-trash-alt fa-lg"></i>
                            </div>
                        </td>
                        <td class="d-none d-md-block">
                            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <div>
                                    <a class="btn btn-secondary" href="{{ path('project_show', {'id' : task.id }) }}">Voir</a>
                                </div>
                                <div>
                                    <a class="btn btn-secondary" href="{{ path('project_edit', {'id' : task.id }) }}">Modifier</a>
                                </div>
                                <div>
                                    {# {{ include('admin/tache/_delete_form.html.twig') }} #}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    {% endblock %}
